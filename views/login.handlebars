<body>
    <header class="hero is-warning is-bold">
        <div class="hero-body">
            <div class="container">
                <h1 class="title">
                    <i class="fas fa-utensils"></i> Online Ordering System
                </h1>
            </div>
        </div>
        <!--Navigation bar-->
        <nav class="navbar-item">
            <div class="field is-grouped">
                <p class="control">
                    <!--Login button-->
                    <a class="button" id="loginButton" href="/login">
                        <!--TODO: create routes-->
                        <span>Login</span>
                    </a>
                </p>
                <p class="control">
                    <!--Home button-->
                    <a class="button" id="registerNavButton" href="/">
                        <!--TODO: create routes-->
                        <span>Home</span>
                    </a>
                </p>
            </div>
        </nav>
    </header>

    <main class="columns">
        <!--User login-->

        <div class="section">
            <form class="section">
                <h2>Enter login details:</h2>
                <div class="container">
                    <!--Username-->
                    <div class="field">
                        <label class="label is-size-5">Username:</label>
                        <input class="input" type="text" id="loginUsername">
                    </div>
                    <!--Password-->
                    <div class="field">
                        <label class="label is-size-5">Password:</label>
                        <input class=" input" type="password" id="loginPassword">
                    </div>
                </div>
                <br>
                <!--Submit button-->
                <submit class="button is-warning" id="submitForm">Submit</submit>
            </form>
            <p class="control level-item">
                <!--Register button-->
                <a class="button is-light" id="registerNavButton" href="/register">
                    <span class="has-text-weight-semibold is-size-5">Don't have an account yet? Register now!</span>
                </a>
            </p>
            <br>
            <p class="control level-item">
                <!--Continue as guest-->
                <a class="button is-light" id="guestButton">
                    <span class="has-text-weight-semibold is-size-5">Continue as a guest</span>
                </a>
            </p>
        </div>
    </main>

</body>
<body>
    <header class="hero is-warning is-bold">
        <div class="hero-body">
            <div class="container">
                <h1 class="title">
                    <i class="fas fa-utensils"></i> Online Ordering System
                </h1>
            </div>
        </div>
        <!--Navigation bar-->
        <nav class="navbar-item">
            <div class="field is-grouped">
                <p class="control">
                    <!--Login button-->
                    <a class="button" id="loginButton" href="/login">
                        <span>Login</span>
                    </a>
                </p>
                <p class="control">
                    <!--Home button-->
                    <a class="button" id="registerNavButton" href="/">
                        <span>Home</span>
                    </a>
                </p>
            </div>
        </nav>
    </header>
    <br>
    <main class="container">
        <!--Dynamically enter restaurant details-->
        <div class="tile is-ancestor">
            <div class="tile is-4 is-vertical is-parent">
                <div class="tile is-child box">
                    <image src="{{restaurant.thumb}}">
                        <p> <b>Name:</b> <br> <a>{{restaurant.name}}</a>
                        </p>
                        <br>
                        <p> <b>Address:</b> <br> <a>{{restaurant.location.address}}</a></p>
                        <br>
                        <p> <b>Phone: </b><br> <a>{{restaurant.phone_numbers}}</a></p>
                        <br>
                        <p> <b>Trading hours:</b> <br> <a>{{restaurant.timings}}</a></p>
                        <br>
                        <p> <b>Additional information:</b> <br> {{restaurant.highlights}}
                        </p>
                </div>
            </div>
            <!--Menu items to be dynamically added from Zomato API or database? -->

            <div class="tile is-parent">
                <div class="tile is-child box">
                    <p class="is-size-2">{{restaurant.name}} Menu:</p>
                    <hr>
                    <ol>
                        {{#each item}}
                        <div class="row">
                            <div class="col">
                                <li>
                                    <span>
                                        {{name}} ,Quantity: {{quantity}} ,Price: ${{price}}
                                        <div class="field">
                                            <input id="switchRtlExample" type="checkbox" name="switchRtlExample"
                                                class="switch is-rtl" checked="checked" data-id=`{{itemId}}`>
                                            <label for="switchRtlExample">Add to order</label>
                                        </div>
                                    </span>
                            </div>
                            {{!-- <div class="col">
                                <button class="button is-warning" data-id=`{{itemId}} id="item" `>
                                    Add to order
                                </button>
                            </div> --}}
                            </li>

                        </div>
                        {{/each}}

                        {{!-- <li>{{items.name}}
                            <button class="button is-warning" value="#" <!--item ID to be retreived from database and
                                set as value, when button is clicked item ID will be added to order database--> >
                                Add to order</button>
                        </li>
                        <br>
                        <li>Menu item #1
                            <button class="button is-warning">Add to order</button>
                        </li> --}}
                    </ol>
                    <hr>
                    <!--Finalise order and send to database-->
                    <button class="button is-warning confirm_order" id="orderId">
                        Place my order
                    </button>
                </div>
            </div>
        </div>
    </main>
</body>